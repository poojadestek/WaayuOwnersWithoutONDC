<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2FD"
    android:orientation="vertical"
    tools:context="com.waayu.owner.fregment.ProductFragment">

    <TextView
        android:id="@+id/txt_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="New Order"
        android:textColor="@color/colorBalck"
        android:textSize="@dimen/_14sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lindeliery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_neworder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="@dimen/_6sdp"
                    android:text=" Delivery "
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_del"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_backgroun"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"

                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <View
                android:id="@+id/view_delievry"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/blue_btn_bg_color" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lindinein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ongoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="@dimen/_6sdp"
                    android:text=" Dining "
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_dining"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_backgroun"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <View
                android:id="@+id/viewdinein"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/blue_btn_bg_color" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/simpleFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>