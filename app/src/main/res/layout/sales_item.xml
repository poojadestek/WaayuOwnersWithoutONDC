<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:id="@+id/rel_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"

                >

                <TextView
                    android:id="@+id/txt_oder_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Order Id: #"
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/txt_order_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="26th Jan 2023 2:30pm"
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"


                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_view1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"


                >

                <TextView
                    android:id="@+id/txt_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Delivered by:-"
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"


                    />

                <TextView
                    android:id="@+id/txt_delivered_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_delivery"
                    android:fontFamily="@font/poppins_bold"
                    android:text=" Dunzo"
                    android:textColor="@color/colorBalck"
                    android:textSize="@dimen/_14sdp"


                    />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Delivered"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGrey"
                android:layout_marginTop="@dimen/_10sdp"

                />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total Price"
            android:textColor="@color/colorBalck"


            />


        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Rs.100"
            android:textColor="@color/colorBalck"
            android:textSize="@dimen/_12sdp"


            />


    </LinearLayout>

    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="@color/colorBalck"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/_4sdp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Price"
            android:layout_gravity="center"
            android:textColor="@color/colorBalck"


            />


        <TextView
            android:id="@+id/txt_delivery_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.30"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"


            />



    </LinearLayout>

    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="@color/colorBalck"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/_4sdp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:textColor="@color/colorBalck"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/txt_tip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.30"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBalck"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"


            />



    </LinearLayout>



</LinearLayout>

</LinearLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>